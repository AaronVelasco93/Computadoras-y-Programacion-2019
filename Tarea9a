Programa 1
#include <stdio.h>
 main () {
  int dia=0;
  int j=0;
  
   printf ("dame un numero del 1 al 7\n"); 
   scanf ("%d",&dia);
   
   switch (dia) {
    case 1:
     printf("Lunes");
	 
    break;   
	
	case 2:
	 printf(" Es el dia Martes");
	 
	 break;
	
	case 3:
	 printf("Es el dia Miercoles");
	 
	 break;
	 
	case 4:
	 printf("Es el dia Jueves");
	 
	 break;
	 
	case 5:
	 printf("Es el dia Viernes");
	 
	 break;
	 
	case 6:
	 printf("Es el dia Sabado");
	 
	 break;
	 	
	case 7:
	 printf("Es el dia Domingo");
	 
	 break;
	 
	 }
   
   
  }
  
  PROGRAMA 2 
   #include <stdio.h>
 int main () {

  int num=0;
  
  printf("Dame un número entero\n");
  scanf("%d",&num);
  
  if ( num % 2 == 0 )
        printf( "\n   Es par" );
    else
        printf( "\n   Es impar" );

 }
 
 PROGRAMA 3
 #include <stdio.h>  
 int main () {

  int num=0;
  int j=0;
  
  printf("Dame un número entero para mostrarte la cantidad en asteriscos\n");
  scanf("%d",&num);
  
  for (j=1; j<=num; j=j+1 ) {
    printf("*");
	
  } 
  
}
