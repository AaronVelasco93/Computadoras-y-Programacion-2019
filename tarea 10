	printf("Jugador dos elgige tu opción\n");
		scanf("%d",&jdos); 
	
		if (juno==jdos){
                    printf("\n\tEmpate\n");
                    }else
                    
                    if (juno==1 && jdos==jdos) 
                    {
                       printf("\nGano el jugador  dos \n");
                                }
                   
					 if (juno==3 && jdos==1)
                    {
                        printf("\nGano el jugador  dos \n");
                                }
					 if (juno==2 && jdos==3)
                    {
                         printf("\nGano el jugador dos \n");
                                }
                    
