PROGRAMA 1#


#include<stdio.h>
int main(){
	
int  precio=0; 
int  iva=0; 
int  total=0;
      
    
      printf("\nEscriba el precio del producto: ");
      scanf("%d", &precio);
      printf("\n");
      iva=precio*0.14;
      printf("El valor del IVA del producto es de: %d", iva);
      printf("\n\n");
      total=precio+iva;
      printf("El valor del producto con el IVA incluido es de: %d", total);
      printf("\n\n");
      
     
}


